{
  "name": "wyn",
  "scopeName": "source.wyn",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#modules" },
    { "include": "#constants" },
    { "include": "#functions" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "match": "//.*$",
      "name": "comment.line.double-slash.wyn"
    },
    "strings": {
      "patterns": [
        {
          "begin": "\"",
          "end": "\"",
          "name": "string.quoted.double.wyn",
          "patterns": [
            { "match": "\\\\[nrt\\\\\"0]", "name": "constant.character.escape.wyn" },
            { "match": "\\\\x[0-9a-fA-F]{2}", "name": "constant.character.escape.wyn" },
            { "begin": "\\$\\{", "end": "\\}", "name": "meta.interpolation.wyn", "patterns": [{ "include": "source.wyn" }] }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        { "match": "\\b0x[0-9a-fA-F]+\\b", "name": "constant.numeric.hex.wyn" },
        { "match": "\\b\\d+\\.\\d+\\b", "name": "constant.numeric.float.wyn" },
        { "match": "\\b\\d+\\b", "name": "constant.numeric.integer.wyn" }
      ]
    },
    "keywords": {
      "patterns": [
        { "match": "\\b(fn|var|const|struct|enum|impl|trait|type|pub|import|export|module)\\b", "name": "keyword.other.wyn" },
        { "match": "\\b(if|else|match|case)\\b", "name": "keyword.control.conditional.wyn" },
        { "match": "\\b(while|for|in)\\b", "name": "keyword.control.loop.wyn" },
        { "match": "\\b(return|break|continue|spawn|await)\\b", "name": "keyword.control.flow.wyn" },
        { "match": "\\b(mut)\\b", "name": "storage.modifier.wyn" },
        { "match": "\\b(true|false)\\b", "name": "constant.language.boolean.wyn" },
        { "match": "\\b(None|Some|Ok|Err)\\b", "name": "constant.language.wyn" },
        { "match": "\\b(self|super)\\b", "name": "variable.language.wyn" }
      ]
    },
    "types": {
      "match": "\\b(int|float|string|bool|void|ResultInt|ResultString|OptionInt|OptionString)\\b",
      "name": "support.type.wyn"
    },
    "modules": {
      "match": "\\b(File|System|Terminal|HashMap|HashSet|Math|Path|DateTime|Json|Regex|Url|Test|Task|Db|Http|Net|Gui|Audio|StringBuilder|Crypto|Encoding|Os|Uuid|Log|Process)\\b",
      "name": "support.class.wyn"
    },
    "constants": {
      "match": "\\b(PI|E)\\b",
      "name": "constant.language.wyn"
    },
    "functions": {
      "match": "\\b(fn)\\s+(\\w+)",
      "captures": {
        "1": { "name": "keyword.other.wyn" },
        "2": { "name": "entity.name.function.wyn" }
      }
    },
    "operators": {
      "patterns": [
        { "match": "->|=>|\\.\\.", "name": "keyword.operator.wyn" },
        { "match": "[+\\-*/%=<>!&|^~?]", "name": "keyword.operator.wyn" }
      ]
    }
  }
}
