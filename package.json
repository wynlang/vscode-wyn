{
  "name": "wyn",
  "displayName": "Wyn Language Support",
  "description": "Syntax highlighting and language support for Wyn",
  "version": "1.4.0",
  "publisher": "wyn-lang",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [{
      "id": "wyn",
      "aliases": ["Wyn", "wyn"],
      "extensions": [".wyn"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "wyn",
      "scopeName": "source.wyn",
      "path": "./syntaxes/wyn.tmLanguage.json"
    }],
    "configuration": {
      "title": "Wyn",
      "properties": {
        "wyn.lsp.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable Wyn Language Server"
        },
        "wyn.lsp.path": {
          "type": "string",
          "default": "wyn",
          "description": "Path to wyn executable"
        }
      }
    }
  }
}
